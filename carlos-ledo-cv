    <script>
        const wrapLabel = (label) => {
            const maxLen = 16;
            if (label.length <= maxLen) {
                return label;
            }
            const words = label.split(' ');
            let currentLine = '';
            const lines = [];
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxLen) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            }
            if (currentLine) {
                lines.push(currentLine.trim());
            }
            return lines;
        };
        
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        const commonChartOptions = {
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: '#FFFFFF',
                        font: {
                            size: 14,
                            family: "'Inter', sans-serif"
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    },
                    backgroundColor: '#1F2937',
                    titleFont: {
                        size: 16,
                        weight: 'bold'
                    },
                    bodyFont: {
                        size: 14
                    },
                    padding: 12,
                    cornerRadius: 8,
                    displayColors: true,
                    boxPadding: 4
                }
            }
        };

        const experienceBlendCtx = document.getElementById('experienceBlendChart').getContext('2d');
        new Chart(experienceBlendCtx, {
            type: 'doughnut',
            data: {
                labels: ['International Agency', 'Freelance & Consulting', 'Client-Side (eCommerce)'],
                datasets: [{
                    label: 'Experience Blend',
                    data: [50, 30, 20],
                    backgroundColor: ['#00A6ED', '#F5B700', '#70C1B3'],
                    borderColor: '#111827',
                    borderWidth: 4,
                    hoverOffset: 8
                }]
            },
            options: {
                ...commonChartOptions,
                responsive: true,
                cutout: '60%',
            }
        });

        const skillsRadarCtx = document.getElementById('skillsRadarChart').getContext('2d');
        new Chart(skillsRadarCtx, {
            type: 'radar',
            data: {
                labels: [
                    'Google Ads', 'Meta Ads', 'Programmatic', 
                    wrapLabel('eCommerce & Marketplaces'), 
                    'Strategy & Planning', 'Team Leadership', 'Analytics & Data'
                ],
                datasets: [{
                    label: 'Skill Level',
                    data: [95, 90, 85, 90, 95, 80, 90],
                    backgroundColor: 'rgba(0, 166, 237, 0.2)',
                    borderColor: '#00A6ED',
                    pointBackgroundColor: '#00A6ED',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#00A6ED',
                    borderWidth: 2
                }]
            },
            options: {
                ...commonChartOptions,
                responsive: true,
                scales: {
                    r: {
                        angleLines: { color: 'rgba(255, 255, 255, 0.2)' },
                        grid: { color: 'rgba(255, 255, 255, 0.2)' },
                        pointLabels: { 
                            color: '#FFFFFF',
                            font: {
                                size: 12,
                                family: "'Inter', sans-serif"
                            }
                        },
                        ticks: {
                            color: '#111827',
                            backdropColor: 'rgba(255, 255, 255, 0.8)',
                            stepSize: 20,
                            font: {
                                weight: 'bold'
                            }
                        },
                        suggestedMin: 0,
                        suggestedMax: 100
                    }
                }
            }
        });
    </script>
